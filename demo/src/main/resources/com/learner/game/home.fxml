<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="720.0" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learner.controllers.HomeController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Welcome to the Hello Worlders App">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#goToLogin" prefHeight="50.0" prefWidth="120.0" text="Login">
         <VBox.margin>
            <Insets top="120.0" />
         </VBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#goToSignup" prefHeight="50.0" prefWidth="120.0" text="Signup">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</VBox>
