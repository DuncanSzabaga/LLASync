<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" stylesheets="@styles.css" prefHeight="480.0" prefWidth="720.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.learner.controllers.OfficalGameSelect">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Game Selection">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <ScrollPane prefHeight="320.0">
         <content>
            <VBox alignment="TOP_CENTER" maxHeight="315.0" minWidth="676.0" prefHeight="315.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <Label text="Learn Words" />
                  <HBox alignment="CENTER" minHeight="95.0" minWidth="200.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Colors Game" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Numbers Game" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Label" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Colors Game" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Numbers Game" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Label" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <Label text="Learn the Alphabet" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="NG/ng" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Ñ/ñ" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label prefWidth="90.0" text="Non-native Letters">
                                 <font>
                                    <Font size="10.0" />
                                 </font></Label>
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <Label text="Read Stories" />
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Three Little Pigs" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Cat and the Hat" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" maxHeight="90.0" maxWidth="90.0" prefWidth="100.0">
                           <children>
                              <Label text="Mr Beast" />
                              <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" prefHeight="65.0" prefWidth="65.0" text="Button" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#goToHome" text="&lt; Back" />
   </children>
</VBox>
